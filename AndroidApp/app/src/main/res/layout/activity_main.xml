<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="10dp"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/btntrain"
        android:layout_marginTop="-1dp"
        android:text="Click on the camera to take a picture when it's ready:"
        tools:ignore="HardcodedText" />

    <Button
        android:id="@+id/btncamera_id"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/text"
        android:layout_marginTop="2dp"
        android:text="Camera"
        tools:ignore="HardcodedText" />

    <ImageView
        android:id="@+id/imageview1"
        android:layout_width="match_parent"
        android:layout_height="497dp"
        android:layout_below="@+id/btncamera_id"
        android:layout_marginTop="-1dp" />

    <Button
        android:id="@+id/storage"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="264dp"
        android:layout_marginEnd="6dp"
        android:layout_marginBottom="20dp"
        android:text="Storage" />

    <TextView
        android:id="@+id/mensagem"
        android:layout_width="368dp"
        android:layout_height="22dp"
        android:layout_above="@+id/storage"
        android:layout_below="@+id/imageview1"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="6dp"
        android:layout_marginEnd="13dp"
        android:layout_marginBottom="2dp"
        android:text="The object is:" />

    <Button
        android:id="@+id/btntrain"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Train" />

    <TextView
        android:id="@+id/txtstate"
        android:layout_width="266dp"
        android:layout_height="wrap_content"
        android:layout_above="@+id/text"
        android:layout_marginStart="25dp"
        android:layout_marginBottom="16dp"
        android:layout_toEndOf="@+id/btntrain"
        android:text="Not ready!" />

</RelativeLayout>